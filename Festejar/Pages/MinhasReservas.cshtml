@page
@model Festejar.Pages.MinhasReservasModel
@{
}

	<div class="breadcrumb-area breadcrumb-padding">
		<div class="container custom-container-one">
			<div class="row">
				<div class="col-lg-12">
					<div class="breadcrumb-contents">
						<h4 class="breadcrumb-contents-title"> Minhas reservas </h4>
						<ul class="breadcrumb-contents-list list-style-none">
							<li class="breadcrumb-contents-list-item"> <a asp-page="Index" class="breadcrumb-contents-list-item-link"> Home </a> </li>
							<li class="breadcrumb-contents-list-item"> Minhas reservas </li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>


	<div class="body-overlay"></div>
	<div class="dashboard-area section-bg-2 dashboard-padding">
		<div class="container">
			<div class="dashboard-contents-wrapper">
				<div class="dashboard-icon">
					<div class="sidebar-icon">
						<i class="las la-bars"></i>
					</div>
				</div>
				<div class="dashboard-left-content">
					<div class="dashboard-close-main">
						<div class="close-bars"> <i class="las la-times"></i> </div>
						<div class="dashboard-bottom">
							<ul class="dashboard-list list-style-none">
								<li class="list">
									<a asp-page="Index"> <i class="las la-briefcase"></i> Home </a>
								</li>
								<li class="list active">
									<a href="dashboard_cancellation.html"> <i class="las la-times-circle"></i> Reserva </a>
								</li>
								<li class="list has-children">
									<a href="javascript:void(0)"> <i class="las la-headset"></i> Ajuda - WhatsApp </a>
								</li>
								<li class="list">
									<a href="javascript:void(0)"> <i class="las la-sign-out-alt"></i> Log Out </a>
								</li>
							</ul>
						</div>
					</div>
				</div>
			@foreach (var dadosReservas in Model.Reservas.Zip(Model.Casas, (r, c) => new { Reserva = r, Casa = c }))
			{
				<div class="dashboard-right-contents mt-4 mt-lg-0">
					<div class="dashboard-reservation">
						<div class="single-reservation bg-white base-padding">
							<div class="single-reservation-item">
								<div class="single-reservation-flex">
									<div class="single-reservation-content">
										<h5 class="single-reservation-content-title"> Reservation ID </h5>
										<span class="single-reservation-content-id"> #@dadosReservas.Reserva.Id </span>
									</div>
									<div class="single-reservation-btn">
										<a href="javascript:void(0)" class="dash-btn btn-cancelled"> Cancelar </a>
									</div>
								</div>
							</div>
							<div class="single-reservation-item">
								<div class="single-reservation-name">
									<h5 class="single-reservation-name-title"> @dadosReservas.Casa.Titulo </h5>
									<p class="single-reservation-name-para"> @dadosReservas.Casa.Endereco </p>
								</div>
							</div>
							<div class="single-reservation-item">
								<div class="single-reservation-details">
									<div class="single-reservation-details-item">
										<span class="single-reservation-details-subtitle"> Entrada </span>
										<h5 class="single-reservation-details-title"> 10:30 AM, @dadosReservas.Reserva.DataReserva </h5>
									</div>
									<div class="single-reservation-details-item">
										<span class="single-reservation-details-subtitle"> Saída </span>
										<h5 class="single-reservation-details-title"> 23:00 PM, @dadosReservas.Reserva.DataReserva </h5>
									</div>
									<div class="single-reservation-details-item">
										<span class="single-reservation-details-subtitle"> Quantidade convidados </span>
										<h5 class="single-reservation-details-title"> @dadosReservas.Reserva.QuantidadePessoas </h5>
									</div>
									<div class="single-reservation-details-item">
										<span class="single-reservation-details-subtitle"> Itens Reservados </span>
										<h5 class="single-reservation-details-title"> Toalhas de mesa | Quantidade: 5 </h5>
									</div>
									<div class="single-reservation-details-item">
										<span class="single-reservation-details-subtitle"> @dadosReservas.Reserva.StatusReserva </span>
										<h5 class="single-reservation-details-title"> @dadosReservas.Reserva.DataReserva </h5>
									</div>
								</div>
							</div>
							<div class="single-reservation-item">
								<div class="single-reservation-request">
									<ul class="single-reservation-request-list list-style-none">
										<li class="single-reservation-request-list-item success">
											<span class="single-reservation-request-list-item-number"> 1 </span>
											<div class="single-reservation-request-list-item-contents">
												<h5 class="single-reservation-name-title"> Pagamento efetuado </h5>
												<p class="single-reservation-name-para"> Obrigado pela preferência, conte sempre conosco! </p>
											</div>
										</li>
										<li class="single-reservation-request-list-item success">
											<span class="single-reservation-request-list-item-number"> 2 </span>
											<div class="single-reservation-request-list-item-contents">
												<h5 class="single-reservation-name-title"> Reserva @dadosReservas.Reserva.StatusReserva </h5>
												<p class="single-reservation-name-para"> @dadosReservas.Reserva.DataReserva </p>
										</div>
										</li>										
									</ul>
								</div>
							</div>
						</div>
					</div>
				</div>
				}
			</div>
		</div>
	</div>


	<div class="popup-overlay"></div>
	<div class="popup-fixed">
		<div class="popup-contents popup-cancell-modal">
			<h2 class="popup-contents-title"> Why do you want to cancel? </h2>
			<div class="popup-contents-select">
				<label class="popup-contents-select-label"> Choose a reason </label>
				<div class="js-select">
					<select>
						<option value="1">Don't want to Book</option>
						<option value="2">Booked Accidentally</option>
						<option value="3">Don't want to Book</option>
					</select>
				</div>
			</div>
			<div class="popup-contents-btn flex-btn">
				<a href="javascript:void(0)" class="dash-btn popup-close"> <i class="las la-arrow-left"></i> Go Back </a>
				<a href="javascript:void(0)" class="dash-btn btn-cancelled popup-close"> Cancel </a>
			</div>
		</div>
	</div>
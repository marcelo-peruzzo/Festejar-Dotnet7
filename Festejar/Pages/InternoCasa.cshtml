    <script>

        // Seleciona o campo de entrada de data
        var dataInput = document.getElementById("dataInput");

        // Adiciona um evento para detectar quando o valor do campo é alterado
        dataInput.addEventListener("change", function () {
            // Envia automaticamente o formulário quando o valor do campo é alterado
            document.getElementById("dataForm").submit();
        });

        function setDataReserva(dataReserva) {
            // Armazena o valor de dataReserva em um cookie
            $.ajax({
                url: '@Url.Action("SetDataReserva", "InternoCasas")',
                type: 'POST',
                data: { dataReserva: dataReserva },
                success: function (result) {
                    // Tratar sucesso
                },
                error: function (result) {
                    // Tratar erro
                }
            });
        }
    </script>

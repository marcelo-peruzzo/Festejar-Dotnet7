    <body>

        <header class="header-style-01">
            <nav class="navbar navbar-area navbar-border navbar-padding navbar-expand-lg">
                <div class="container custom-container-one nav-container">
                    <div class="logo-wrapper">
                    <a class="navbar-brand" asp-page="Index">
                            <img src="~/img/festejar_logo.svg" />
                        </a>
                    </div>
                    <div class="responsive-mobile-menu d-lg-none">
                        <a href="javascript:void(0)" class="click-nav-right-icon">
                            <i class="las la-ellipsis-v"></i>
                        </a>
                        <button class="navbar-toggler"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#hotel_booking_menu">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    </div>
                    <div class="collapse navbar-collapse" id="hotel_booking_menu">
                        <ul class="navbar-nav">
                            <li class="menu-item-has-children current-menu-item">
                            <a class="nav-link text-dark" asp-page="Index">Home</a>
                            </li>
                            <li><a asp-page="About"> Sobre-nós </a></li>
                            <li><a href="checkout.html"> Pagamento </a></li>
                            <li class="menu-item-has-children current-menu-item">
                                <a href="javascript:void(0)">Casas</a>
                                <ul class="sub-menu">
                                    <li><a href="listing.html">Ampére</a></li>
                                    <li><a href="hotel_details.html"> Santo Antônio </a></li>
                                    <li><a href="confirmation.html"> Navegantes - SC </a></li>
                                    <li><a href="dashboard.html"> Realeza </a></li>
                                </ul>
                            </li>
                            <li><a href="contact.html"> Contate-nos </a></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="MinhasReservas" asp-action="MinhasReservas">Minhas Reservas</a></li>
                        </ul>
                    </div>
                
                    @if (User.Identity.IsAuthenticated)
                    {
                    <div class="navbar-right-content show-nav-content">
                        <div class="single-right-content">
                            <div class="navbar-right-flex">
                                <div class="navbar-right-btn">
                                    <span class="navbar-text text-dark">Olá, @User.Identity.Name!</span>
                                </div>
                                <div class="btn-wrapper">
                                    <form method="post" asp-page="/Index">
                                        <button type="submit" class="cmn-btn btn-bg-1 radius-10">Sair</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                    else
                    {
                        <div class="navbar-right-content show-nav-content">
                            <div class="single-right-content">
                                <div class="navbar-right-flex">
                                    <div class="navbar-right-btn">
                                        <a asp-page="Login"> Entrar </a>
                                    </div>
                                    <div class="btn-wrapper">
                                    <a asp-page="RegisterLogin" class="cmn-btn btn-bg-1 radius-10">
                                            Registre-se
                                    </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }              
                </div>
            </nav>
        </header>

        <div class="header-style-01">
            <main role="main">
                @RenderBody()
            </main>
        </div>


